@page
@model MyApp.Namespace.ListModel
@{
}

<h1>Lista Personas</h1>
<br/>

<table class="table table-striped table-blue">
    <tr>
        <th align="center">Nombres</th>
        <th>Identidad</th>
        <th>Edad</th>
        <th>Sexo</th>
        <th>Detalle</th>
        <th>Crear</th>
        <th>Eliminar</th>
        <th>Actualizar</th>  
          
    </tr>
       
      
    @foreach (var persona in Model.Personas)
    {
        
      <tr>
      
        <td>@persona.Nombres</td>
        <td>@persona.Identidad</td>
        <td>@persona.Sexo</td>
        <td>@persona.Edad</td>
      
          <td>
            <a class ="btn btn-primary" asp-page="./Details" asp-route-id="@persona.Id">
              <center><i class="fas fa-info"></i></center>
            </a>       
          </td> 
          <td>
            <a class ="btn btn-primary" asp-page="./Create" asp-route-id="@persona.Id">
              <i class="far fa-calendar-plus"></i>
            </a>       
          </td>
          <td>
            <a class ="btn btn-danger" asp-page="./Delete" asp-route-id="@persona.Id">
              <i class="fas fa-trash-alt"></i>       
            </a>
          </td> 
          <td>
            <a class ="btn btn-primary" asp-page="./Update" asp-route-id="@persona.Id">
              <i class="fas fa-edit"></i>
            </a>       
          </td>
      </tr>  
    }
</table>
